{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "types": ["vitest/globals"],
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  
  "include": [
    "src",
    "**/*.spec.ts",
    "**/*.test.ts",
    "vitest.config.ts"
  ]
}
